# PassAgent Environment Configuration

# Application Settings
APP_NAME=PassAgent
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8080

# Database Configuration
DATABASE_URL=sqlite:///./passagent.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=passagent
DATABASE_USER=passagent
DATABASE_PASSWORD=your_password_here

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# AI Model Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Qwen (Alibaba)
QWEN_API_KEY=your_qwen_api_key_here
QWEN_MODEL=qwen-max

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# MCP Server Configuration
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Password Analysis Settings
PWNED_PASSWORDS_API_URL=https://api.pwnedpasswords.com/range/
HASHCAT_RULES_PATH=./rules/
WORDLIST_PATH=./wordlists/

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.bmp,.webp
ALLOWED_AUDIO_EXTENSIONS=.mp3,.wav,.ogg,.m4a,.flac

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/passagent.log

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Vector Database (Milvus) - Optional
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_DATABASE=passagent

# Geographic Services
GEOCODING_API_KEY=your_geocoding_api_key_here

# Encryption Keys (for sensitive data)
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
